            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}"
        },
        {
            "name": "Python: Networks Data Prep",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/networks/src/data_preparation.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "LC_ALL": "C.UTF-8",
                "LANG": "C.UTF-8"
            }
        },
        {
            "name": "Python: Train",
            "type": "python",
            "request": "launch",
